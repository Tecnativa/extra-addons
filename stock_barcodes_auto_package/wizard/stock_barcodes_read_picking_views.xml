<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_barcodes_read_picking_form" model="ir.ui.view">
        <field name="model">wiz.stock.barcodes.read.picking</field>
        <field
            name="inherit_id"
            ref="stock_barcodes.view_stock_barcodes_read_picking_form"
        />
        <field name="arch" type="xml">
            <div name="manual_entry" position="after">
                <div class="d-flex" name="auto_put_in_pack_on_read">
                    <field
                        name="auto_put_in_pack_on_read"
                        widget="FieldBarcodeBooleanToggle"
                    />
                    <label for="auto_put_in_pack_on_read" />
                </div>
            </div>
            <i name="manual_entry" position="after">
                <i
                    name="auto_put_in_pack_on_read"
                    class="fa fa-cube text-info mr-1"
                    attrs="{'invisible': [('auto_put_in_pack_on_read', '=', False)]}"
                />
            </i>
        </field>
    </record>
</odoo>
