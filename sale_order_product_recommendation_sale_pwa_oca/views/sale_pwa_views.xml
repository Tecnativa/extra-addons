        <field
      name="inherit_id"
      ref="sale_order_product_recommendation.view_order_form"
    />
        <field name="arch" type="xml">
            <xpath
        expr="//button[@name='%(sale_order_product_recommendation.sale_order_recommendation_action)d']"
        position="attributes"
      >
                <attribute name="class" separator=" " add="oe_pwa_standalone_visible" />
            </xpath>
        </field>
    </record>

</odoo>
