<?xml version="1.0"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.require.client.ref</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="client_order_ref" position="before">
                <field name="so_require_client_order_ref" invisible="1" />
            </field>
            <field name="client_order_ref" position="attributes">
                <attribute name="attrs">{'required': [('so_require_client_order_ref', '=', True)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
