<odoo>

    <record id="purchase_requisition_wiz" model="ir.ui.view">
        <field name="name">purchase.requisition.wiz</field>
        <field name="model">purchase.requisition.wiz</field>
        <field name="arch" type="xml">
            <form string="Purchase requisition from outgoing moves">
                <sheet>
                    <group>
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
                    <group>
                        <field name="product_attribute_ids" widget="many2many_tags" />
                    </group>
                </sheet>
                <footer>
                    <button
                        name="print_report"
                        type="object"
                        string="Print"
                        class="btn-primary"
                    />
                    <button
                        name="action_open_moves"
                        type="object"
                        string="Open stock moves"
                        class="btn-secondary"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_purchase_requisition_wizard">
        <field name="name">Purchase requisition from outgoing moves</field>
        <field name="res_model">purchase.requisition.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="purchase_requisition_from_outgoing_move_menu"
        parent="purchase.purchase_report_main"
        name="Print purchase requisition from outgoing moves"
        action="action_purchase_requisition_wizard"
        sequence="99"
    />

</odoo>
