<odoo>

        <record id="sale_stock_form_picking_batch" model="ir.ui.view">
            <field name="name">Sale Order Form Picking Batch</field>
            <field name="model">sale.order</field>
            <field
            name="inherit_id"
            ref="sale_stock.view_order_form_inherit_sale_stock"
        />
            <field name="arch" type="xml">
                <xpath
                expr="//group[@name='partner_details']//field[@name='partner_shipping_id']"
                position="after"
            >
                    <field
                    name="picking_batch_ids"
                    widget="many2many_tags"
                    attrs="{'invisible': [('picking_batch_ids', '=', [])]}"
                />
                </xpath>
            </field>
        </record>

</odoo>
