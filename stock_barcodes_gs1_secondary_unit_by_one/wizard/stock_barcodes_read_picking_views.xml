<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_barcodes_read_form" model="ir.ui.view">
        <field name="model">wiz.stock.barcodes.read</field>
        <field name="inherit_id" ref="stock_barcodes.view_stock_barcodes_read_form" />
        <field name="arch" type="xml">
            <div name="manual_entry" position="after">
                <div class="d-flex" name="set_secondary_unit_one_by_one">
                    <field
                        name="set_secondary_unit_one_by_one"
                        widget="FieldBarcodeBooleanToggle"
                    />
                    <label for="set_secondary_unit_one_by_one" string="1 by 1" />
                </div>
            </div>
            <i name="manual_entry" position="after">
                <i
                    name="set_secondary_unit_one_by_one"
                    class="fa fa-superscript text-info mr-1"
                    attrs="{'invisible': [('set_secondary_unit_one_by_one', '=', False)]}"
                />
            </i>
        </field>
    </record>
</odoo>
