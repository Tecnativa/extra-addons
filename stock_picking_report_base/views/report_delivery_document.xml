<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<template id="style">
    <style type="text/css">
.table-compressed {
    margin-bottom: 0px;
}
.table-compressed > tbody > tr > td {
    border-top: 0px;
    padding: 0px;
}
.table-compressed > tbody > tr > td {
    padding: 3px;
}
h3 {
    margin-top: 10px;
}
        </style>
</template>

<template id="table_head_customer_info">
    <tr class="table-borderless">
        <th t-att-colspan="customer_th_with or 3">
            <div>
                <h3><span t-field="o.name" /></h3>
            </div>
            <div>
                <span><strong>Customer Address:</strong></span>
            </div>
            <div t-if="o.partner_id" name="partner_header">
                <div
                        t-field="o.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": true}'
                    />
            </div>
        </th>
    </tr>
</template>

<template
        id="report_delivery_hidden_head_document"
        inherit_id="stock.report_delivery_document"
    >

    <xpath expr="//div[@class='page']" position="inside">
        <t t-call="stock_picking_report_base.style" />
    </xpath>

    <xpath expr="//div[@class='page']/h2" position="attributes">
        <attribute name="class">d-none</attribute>
    </xpath>

    <xpath expr="//table[@name='stock_move_line_table']" position="attributes">
        <attribute name="class">table table-condensed table-compressed</attribute>
    </xpath>

    <!-- Hidden some elements -->
    <xpath expr="//t[@t-set='partner']" position="attributes">
        <attribute name="t-value">False</attribute>
    </xpath>

</template>

<template
        id="report_delivery_customer_head_document"
        inherit_id="stock.report_delivery_document"
        priority="999"
    >

    <!-- Write new fields -->
    <xpath expr="//table[@name='stock_move_table']/thead/tr" position="before">
        <t t-call="stock_picking_report_base.table_head_customer_info">
            <t t-set="customer_th_with" t-value="3" />
        </t>
    </xpath>

    <xpath expr="//table[@name='stock_move_line_table']/thead/tr" position="before">
        <t t-call="stock_picking_report_base.table_head_customer_info">
            <t t-set="customer_th_with" t-value="3" />
        </t>
    </xpath>

</template>

</odoo>
