<odoo>
    <record id="view_stock_barcodes_read_picking_form" model="ir.ui.view">
        <field name="model">wiz.stock.barcodes.read.picking</field>
        <field
            name="inherit_id"
            ref="stock_barcodes.view_stock_barcodes_read_picking_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='quant_package']" position="after">
                <group name="master_box">
                    <div class="mt4">
                        <strong class="d-none d-sm-block">Master Box</strong>
                        <span
                            class="fa fa-cubes d-sm-none oe_span_small_icon"
                            title="Master Box"
                        />
                        <field
                            name="master_box_id"
                            options="{'no_create': True}"
                            attrs="{'readonly': [('manual_entry', '=', False)]}"
                            force_save="1"
                            style="width:35%"
                            class="h5"
                        />
                        <button
                            class="btn btn-warning btn-sm oe_kanban_action_button pull-right mr4"
                            name="action_clean_master_box"
                            type="object"
                            icon="fa-trash fa-1x"
                            title="Clean master box info"
                        />
                        <button
                            id="btn_create_master_box"
                            class="btn btn-secondary ml2 btn-sm oe_kanban_action_button pull-right mr4"
                            type="object"
                            name="action_create_master_box"
                            icon="fa-plus fa-1x"
                            title="Create master box"
                        />
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
